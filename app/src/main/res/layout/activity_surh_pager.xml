<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="ActionbarH" type="com.example.holyquranstatistics.databinding.ActivitySurhPagerBinding"/>
    </data>

    <RelativeLayout
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:focusableInTouchMode ="true"
    android:clickable="true"
   >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/action_bar_sourh"
        android:background="@color/transparent_actionbar_color"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/qourn_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             app:popupTheme="@style/CustomTheme1">



        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>


<androidx.viewpager2.widget.ViewPager2
    android:id="@+id/surh_view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
     />




</RelativeLayout>
</layout>